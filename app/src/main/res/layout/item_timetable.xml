<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#1E3C3B">


    <androidx.cardview.widget.CardView
        android:layout_width="202dp"
        android:layout_height="25dp"
        app:cardBackgroundColor="#2D4E4D"
        app:cardCornerRadius="6dp">

        <TextView
            android:id="@+id/item_timetable_tvType"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal"
            android:layout_marginTop="2dp"
            android:textColor="#6E9177"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="101dp"
        android:layout_height="25dp"
        app:cardBackgroundColor="#3B6867"
        app:cardCornerRadius="6dp">

        <TextView
            android:id="@+id/item_timetable_tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:textColor="#B7DFD9"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="12dp">


        <!-- Добавил TextView для дисциплины -->
        <TextView
            android:id="@+id/item_timetable_tvSubject"
            style="@style/DateString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Добавил TextView для начала и конца времени -->


        <TextView
            android:id="@+id/item_timetable_tvPrepod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B7DFD9"
            android:textSize="11sp"
            tools:ignore="RtlHardcoded" />

        <!-- Добавил TextView для аудитории -->
        <TextView
            android:id="@+id/item_timetable_tvRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#B7DFD9"
            android:textSize="11sp"
            tools:ignore="RtlHardcoded" />

        <!-- Добавил TextView для типа дисциплины -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
