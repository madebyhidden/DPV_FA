<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#1E3C3B">

    <androidx.cardview.widget.CardView
        android:layout_width="137dp"
        android:layout_height="37dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#3B6867">

        <TextView
            android:id="@+id/item_timetable_tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textColor="#B7DFD9"
            android:textSize="20sp"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Добавил TextView для дисциплины -->
        <TextView
            android:id="@+id/item_timetable_tvSubject"
            style="@style/DateString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Добавил TextView для начала и конца времени -->
        <TextView
            android:id="@+id/item_timetable_tvType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6E9177"
            android:textSize="16sp" />

        <!-- Добавил TextView для аудитории -->
        <TextView
            android:id="@+id/item_timetable_tvRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#B7DFD9"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <!-- Добавил TextView для типа дисциплины -->


    </LinearLayout>
</androidx.cardview.widget.CardView>